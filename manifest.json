{
  "manifest_version": 3,
  "name": "Job Ad Helper",
  "version": "1.0",
  "description": "Generate a cover letter prompt from a job ad link.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
